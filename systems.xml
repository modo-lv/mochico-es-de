<theme>
  <view name="system">
  
    <!-- Main system selector -->
    <carousel name="sys-hardware">
      <maxItemCount>1</maxItemCount>
      <itemScale>1</itemScale>
      <staticImage>${sys-hardware}</staticImage>      
      <itemSize>1 1</itemSize>
      <color>00000000</color>
      <imageColor>${image-tone}</imageColor>
      <origin>0.5 0.5</origin>
      <pos>0.5 0.5</pos>
      <size>1 0.95</size>
    </carousel>    
    
    <text name="sys-name">
      <size>0.48438 0.025</size>
    </text>
    
  </view>  
</theme>